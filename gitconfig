  tool = vimdiff
[credential]
  helper = cache --timeout=604800
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  au = add -u .
  ll = log --oneline --graph
  lg = log --graph
  d = difftool
  pop = stash pop
	ls = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Cblue %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit

[i18n]
